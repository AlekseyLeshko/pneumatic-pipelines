{
  "env": {
    "node": true,
    "jest/globals": true
  },
  "extends": ["plugin:jest/recommended", "standard"],
  "plugins": ["prettier", "jest"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "semi": ["error", "never"],
    "comma-dangle": ["error", "always-multiline"]
  }
}
